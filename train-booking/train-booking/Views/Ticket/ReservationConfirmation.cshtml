@model train_booking.ViewModels.Tickets.ReservationConfirmationViewModel
@{ ViewData["Title"] = "Підтвердження бронювання"; }


<div class="card ticket">
    <div class="card-body">
        <h5 class="card-title text-light"><a>Підтвердження бронювання</a></h5>
        <hr class="hrticket" />
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <div>
                    @Html.DisplayNameFor(model => model.LastName):
                    @Html.DisplayFor(model => model.LastName)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.FirstName):
                    @Html.DisplayFor(model => model.FirstName)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.MiddleName):
                    @Html.DisplayFor(model => model.MiddleName)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.Passport):
                    @Html.DisplayFor(model => model.Passport)
                </div>
                <div class="mt-3">
                    @Html.DisplayNameFor(model => model.DeparturePoint):
                    @Html.DisplayFor(model => model.DeparturePoint)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.Destination):
                    @Html.DisplayFor(model => model.Destination)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.DeparturePointDate):
                    @Html.DisplayFor(model => model.DeparturePointDate)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.DestinationDate):
                    @Html.DisplayFor(model => model.DestinationDate)
                </div>
            </div>
            <div>
                <div>
                    @Html.DisplayNameFor(model => model.WagonType):
                    @Html.DisplayFor(model => model.WagonType)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.WagonId):
                    @Html.DisplayFor(model => model.WagonId)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.SeatNumber):
                    @Html.DisplayFor(model => model.SeatNumber)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.PlacePrice):
                    @Html.DisplayFor(model => model.PlacePrice)
                </div>
            </div>
        </div>
        <hr class="hrticket" />
        <form asp-action="ReservationConfirmation" class="text-center">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="SeatId" />
            <input type="hidden" asp-for="PlacePrice" />
            <input type="submit" value="Забронювати" class="btn btn-success mr-1" />
            <a class="btn btn-secondary ml-1" asp-action="Index" asp-controller="Ticket">⠀⠀⠀Назад⠀⠀⠀</a>
        </form>
    </div>
</div>