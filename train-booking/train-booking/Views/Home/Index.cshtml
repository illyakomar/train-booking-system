@model train_booking.ViewModels.Account.LoginAndRegisterViewModel


@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Identity;


@{
    ViewData["Title"] = "Головна";
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Головна</title>


    <link href="~/lib/template/landing-page/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/template/landing-page/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="~/lib/template/landing-page/css/landing-page.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/lib/template/images/favicon-32.png" />

</head>

<body>
    <header class="masthead text-white text-center">
        <div class="overlay">
            <nav class="navbar navbar-light bg-ligh static-top">
                <div class="container">
                    <img class="w-25" src="~/lib/template/landing-page/img/logo-landpage.png">
                    <button type="button" class="btn btn-landing-login btn-outline-primary btn-landing-login-text" data-toggle="modal" data-target="#modalLRForm" href="#">
                        Вхід
                    </button>
                </div>
            </nav>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-3 landing-text">Купити ЖД квитки онлайн</h1>
                </div>
                <div class="col-md-10 col-lg-9 col-xl-9 mx-auto">
                    <form>
                        <div class="form-row d-flex justify-content-between">
                            <div>
                                <input type="search" class="form-control " placeholder="Звідки">
                            </div>
                            <div>
                                <input type="search" class="form-control  " placeholder="Куди">
                            </div>
                            <div>
                                <input type="date" class="form-control  " placeholder="Дата">
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-block btn-group-sm btn-danger">Знайти</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="modal fade" id="modalLRForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog cascading-modal" role="document">
            <div class="modal-content">
                <div class="modal-c-tabs">
                    <ul class="nav nav-tabs md-tabs tabs-2 light-blue darken-3" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#panel7" role="tab">
                                <i class="fas fa-user mr-1"></i>
                                Вхід
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#panel8" role="tab">
                                <i class="fas fa-user-plus mr-1"></i>
                                Реєстрація
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade in show active" id="panel7" role="tabpanel">
                            <form class="modal-body mb-1" method="post" asp-controller="Account"  asp-action="Login" asp-route-returnUrl="Login.ReturnUrl">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <input type="email" asp-for="Login.Email" class="form-control form-control-lg" placeholder="Email">
                                    </div>
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group" id="passwordInput">
                                        <input asp-for="Login.Password" class="form-control form-control-lg" placeholder="Пароль" />
                                        <a href="" id="eyeContainer"><i class="fa fa-eye-slash eye" title="Показати пароль" id="show_hide_password" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                                <div class="text-center mt-1">
                                    <button type="submit" class="btn btn-block btn-primary font-weight-medium auth-form-btn">Увійти</button>
                                </div>
                                <div class="form-check" data-step="2" data-intro="Відмітьте, якщо хочете залишитись в системі" data-position="left">
                                    <label asp-for="Login.RememberMe" class="form-check-label text-muted">
                                        <input type="checkbox" asp-for="Login.RememberMe" class="form-check-input">
                                        Запам'ятати мене
                                    </label>
                                </div>
                            </form>
                            <div class="modal-footer">
                                <div class="options text-center text-md-right mt-1">
                                    <a href="@Url.Action("ForgotPassword", "Account")" class="auth-link text-black">Забули пароль?</a>
                                </div>
                                <button type="button" class="btn btn-outline-primary waves-effect ml-auto" data-dismiss="modal">Закрити</button>
                            </div>
                        </div>
                        <form class="tab-pane fade" id="panel8" role="tabpanel" method="post" asp-controller="Account" asp-action="Register">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="modal-body">
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <label asp-for="Register.Email">Email</label>
                                        <input asp-for="Register.Email" type="email" class="form-control form-control-md" id="Email" placeholder="Email">
                                        <span class="small" asp-validation-for="Register.Email"></span>
                                    </div>
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <label asp-for="Register.LastName">Прізвище</label>
                                        <input asp-for="Register.LastName" type="text" class="form-control form-control-md" id="lastname" placeholder="Прізвище">
                                        <span class="small" asp-validation-for="Register.LastName"></span>
                                    </div>
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <label asp-for="Register.FirstName">Ім'я</label>
                                        <input asp-for="Register.FirstName" type="text" class="form-control form-control-md" id="firstname" placeholder="Ім'я">
                                        <span class="small" asp-validation-for="Register.FirstName" ></span>
                                    </div>
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <label asp-for="Register.MiddleName">По батькові</label>
                                        <input asp-for="Register.MiddleName" type="text" class="form-control form-control-md" id="fathername" placeholder="По батькові">
                                        <span class="small" asp-validation-for="Register.MiddleName"></span>
                                    </div>
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <label asp-for="Register.Passport">Номер паспорта</label>
                                        <input asp-for="Register.Passport" type="text" class="form-control form-control-md" id="phonenumber" placeholder="Номер паспорта">
                                        <span class="small" asp-validation-for="Register.Passport"></span>
                                    </div>
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <label asp-for="Register.Password">Пароль</label>
                                        <input asp-for="Register.Password" type="password" class="form-control form-control-md" id="password" placeholder="Пароль">
                                        <span class="small"  asp-validation-for="Register.Password"></span>
                                    </div>
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <div class="form-group">
                                        <label asp-for="Register.PasswordConfirm">Підтвердження паролю</label>
                                        <input asp-for="Register.PasswordConfirm" type="password" class="form-control form-control-md" id="confirmpass" placeholder="Підтвердження паролю">
                                        <span class="small" asp-validation-for="Register.PasswordConfirm"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-3 text-center">
                                    <button type="submit" id="register" class="btn btn-primary font-weight-medium auth-form-btn mb-4">Зареєструватися</button>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-primary waves-effect ml-auto" data-dismiss="modal">Закрити</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-list m-auto text-primary"></i>
                        </div>
                        <h3>Розклад поїздів</h3>
                        <p class="lead mb-0">Будьте завжди в курсі! Розклад поїздів, маршрути, станції</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-magnifier m-auto text-primary"></i>
                        </div>
                        <h3>Шукаємо квиток за вас</h3>
                        <p class="lead mb-0">Немає потрібних квитків? Ми знайдемо їх і миттєво сповістимо вас про це</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-check m-auto text-primary"></i>
                        </div>
                        <h3>Повернення квитків онлайн</h3>
                        <p class="lead mb-0">Змінились плани? Поверніть кошти за квиток через наш сайт!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                        <img class="img-fluid rounded-circle" src="~/lib/template/landing-page/img/ukraine.png" alt="">
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">Популярні напрямки по Україні</h2>
                        <p>&bull; Київ-Пасажирський → Львів</p>
                        <p>&bull; Київ-Пасажирський → Харків-Пас</p>
                        <p>&bull; Київ-Пасажирський → Одеса-Головна</p>
                        <p>&bull; Київ-Пасажирський → Дніпро-Головний</p>
                        <p>&bull; Київ-Пасажирський → Вінниця</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="p-5">
                        <img class="img-fluid rounded-circle" src="~/lib/template/landing-page/img/ukraine.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="p-5">
                        <h2 class="display-4">Пошук і бронювання ж/д квитків</h2>
                        <p>Щоб знайти ж/д квитки потрібно декілька секунд. Введіть:</p>
                        <p>&bull; Пункт відправлення та призначення</p>
                        <p>&bull; Дата поїздки.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                        <img class="img-fluid rounded-circle" src="~/lib/template/landing-page/img/vokzal.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">Наші переваги</h2>
                        <p>&bull; Легкий процес пошуку і покупки</p>
                        <p>&bull; Відсутність додаткових зборів і комісій</p>
