@model train_booking.ViewModels.Account.RegisterViewModel

<form class="tab-pane fade needs-validation" id="panel8" role="tabpanel" method="post" asp-controller="Account" asp-action="Register" novalidate>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="modal-body">
        <div class="md-form form-sm mb-4">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control form-control-md" id="Email" placeholder="Email" required>
                <span class="small" asp-validation-for="Email"></span>
                <div class="valid-feedback">
                    Email вказано.
                </div>
                <div class="invalid-feedback">
                    Будь-ласка введіть email.
                </div>
            </div>
        </div>
        <div class="md-form form-sm mb-4">
            <div class="form-group">
                <label asp-for="LastName">Прізвище</label>
                <input asp-for="LastName" type="text" class="form-control form-control-md" id="lastname" placeholder="Прізвище" required>
                <span class="small" asp-validation-for="LastName"></span>
                <div class="valid-feedback">
                    Прізвище вказано.
                </div>
                <div class="invalid-feedback">
                    Будь-ласка введіть прізвище.
                </div>
            </div>
        </div>
        <div class="md-form form-sm mb-4">
            <div class="form-group">
                <label asp-for="FirstName">Ім'я</label>
                <input asp-for="FirstName" type="text" class="form-control form-control-md" id="firstname" placeholder="Ім'я" required>
                <span class="small" asp-validation-for="FirstName"></span>
                <div class="valid-feedback">
                    Ім'я вказано.
                </div>
                <div class="invalid-feedback">
                    Будь-ласка введіть ім'я.
                </div>
            </div>
        </div>
        <div class="md-form form-sm mb-4">
            <div class="form-group">
                <label asp-for="MiddleName">По батькові</label>
                <input asp-for="MiddleName" type="text" class="form-control form-control-md" id="fathername" placeholder="По батькові" required>
                <span class="small" asp-validation-for="MiddleName"></span>
                <div class="valid-feedback">
                    По батькові вказано.
                </div>
                <div class="invalid-feedback">
                    Будь-ласка введіть по батькові.
                </div>
            </div>
        </div>
        <div class="md-form form-sm mb-4">
            <div class="form-group">
                <label asp-for="Passport">Номер паспорта</label>
                <input asp-for="Passport" type="text" class="form-control form-control-md" id="phonenumber" placeholder="Номер паспорта" required>
                <span class="small" asp-validation-for="Passport"></span>
                <div class="valid-feedback">
                    Паспорт вказано.
                </div>
                <div class="invalid-feedback">
                    Будь-ласка введіть номер паспорта.
                </div>
            </div>
        </div>
        <div class="md-form form-sm mb-4">
            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" type="password" class="form-control form-control-md" id="password" placeholder="Пароль" required>
                <span class="small" asp-validation-for="Password"></span>
                <div class="valid-feedback">
                    Пароль вказано.
                </div>
                <div class="invalid-feedback">
                    Будь-ласка введіть пароль.
                </div>
            </div>
        </div>
        <div class="md-form form-sm mb-4">
            <div class="form-group">
                <label asp-for="PasswordConfirm">Підтвердження паролю</label>
                <input asp-for="PasswordConfirm" type="password" class="form-control form-control-md" id="confirmpass" placeholder="Підтвердження паролю" required>
                <span class="small" asp-validation-for="PasswordConfirm"></span>
                <div class="valid-feedback">
                    Підтвердження паролю вказано.
                </div>
                <div class="invalid-feedback">
                    Будь-ласка введіть підтверджений пароль.
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-3 text-center">
            <button type="submit" id="register" class="btn btn-primary font-weight-medium auth-form-btn mb-4">Зареєструватися</button>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-primary waves-effect ml-auto" data-dismiss="modal">Закрити</button>
    </div>
</form>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>