@model train_booking.ViewModels.Trains.TrainViewModel

@{
    ViewData["Title"] = "Додавання потягу";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Додати потяг</h5>
            <form method="post" class="form-sample" asp-controller="StorageTrain" asp-action="Create">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <label class="col-sm-5 col-form-label" asp-for="NumberTrain">Номер потягу</label>
                    <div class="col-sm-9">
                        <input type="number" asp-for="NumberTrain" class="form-control form-control-sm" maxlength="64">
                        <span class="small" asp-validation-for="NumberTrain"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-5 col-form-label" asp-for="TypeTrain">Тип потягу</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="TypeTrain" class="form-control form-control-sm" maxlength="256">
                        <span class="small" asp-validation-for="TypeTrain"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary btn-fw">Зберегти</button>
                <a class="btn btn-outline-secondary btn-fw" href="/StorageTrain">Скасувати</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
