   <div class="iframe-container">
       <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5440390.856346636!2d26.692748315177266!3d48.25589020660742!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d1d9c154700e8f%3A0x1068488f64010!2z0KPQutGA0LDQuNC90LA!5e0!3m2!1sru!2sua!4v1604660976538!5m2!1sru!2sua" width="300" height="300"></iframe>
   </div>


@section Scripts{ 
<script>
    
    var $iframes = $("iframe");

   
    $iframes.each(function () {
        $(this).data("ratio", this.height / this.width)
            
            .removeAttr("width")
            .removeAttr("height");
    });

    
    $(window).resize(function () {
        $iframes.each(function () {
            
            var width = $(this).parent().width();
            $(this).width(width)
                .height(width * $(this).data("ratio"));
        });
        
    }).resize();
</script>

}