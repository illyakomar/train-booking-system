@model IEnumerable<Seat>

@{ ViewData["Title"] = "Мої квитки"; }


@foreach (var seat in Model)
{
    <div class="col-8 stretch-card grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover datatable-table mt-2">
                        <thead class="text-center">
                            <tr>
                                <th data-column="Username" class="vertical-header-column visible"></th>
                                <th data-column="Wagon" class="vertical-header-column visible"></th>
                                <th data-column="Train" class="vertical-header-column visible"></th>
                                <th data-column="InfoTrain" class="vertical-header-column visible"></th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            <tr>
                                <th data-column="Username" class="vertical-header-column">Призвіще, Ім'я, по батькові</th>
                                <td data-column="Wagon">@seat.User.LastName @seat.User.FirstName @seat.User.MiddleName</td>
                                <th data-column="Train" class="vertical-header-column">Номер потягу</th>
                                <td data-column="InfoTrain">@seat.Wagon.Train.NumberTrain</td>
                            </tr>
                            <tr>
                                <th data-column="Username" class="vertical-header-column">Відправлення</th>
                                <td data-column="Wagon">@seat.Wagon.Train.Route.DeparturePoint</td>
                                <th data-column="Train" class="vertical-header-column">Тип вагона</th>
                                <td data-column="InfoTrain">@seat.Wagon.TypeWagon</td>
                            </tr>
                            <tr>
                                <th data-column="Username" class="vertical-header-column">Призначення</th>
                                <td data-column="Wagon">@seat.Wagon.Train.Route.Destination</td>
                                <th data-column="Train" class="vertical-header-column">Номер Вагону</th>
                                <td data-column="InfoTrain">@seat.Wagon.WagonId</td>
                            </tr>
                            <tr>
                                <th data-column="Username" class="vertical-header-column">Дата/час відпр.</th>
                                <td data-column="Wagon">@seat.Wagon.Train.Route.DeparturePointDate</td>
                                <th data-column="Train" class="vertical-header-column">Місце</th>
                                <td data-column="InfoTrain">@seat.SeatNumber</td>
                            </tr>
                            <tr>
                                <th data-column="Username" class="vertical-header-column">Дата/час приб.</th>
                                <td data-column="Wagon">@seat.Wagon.Train.Route.DestinationDate</td>
                                <th data-column="Train" class="vertical-header-column">Ціна UAH</th>
                                <td data-column="InfoTrain">@seat.Wagon.PlacePrice</td>
                            </tr>
                            <tr>
                                <th data-column="Username" class="vertical-header-column">Тип потягу</th>
                                <td data-column="Wagon">@seat.Wagon.Train.TypeTrain</td>
                                <th data-column="Train" class="vertical-header-column">Номер квитка</th>
                                <td data-column="InfoTrain">@seat.Id</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
@section Styles{

    <link rel="stylesheet" href="~/lib/template/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/r-2.2.3/datatables.min.css" />
}


@section Scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.tiny.cloud/1/qagffr3pkuv17a8on1afax661irst1hbr4e6tbv888sz91jc/tinymce/5/tinymce.min.js"></script>
    <script src="~/lib/template/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/r-2.2.3/datatables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.flash.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.print.min.js"></script>
    <script src="~/js/printForTicket.js" asp-append-version="true"></script>
}
